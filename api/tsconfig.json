{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2019"],
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "typeRoots": ["node_modules/@types"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "lib",
    "rootDir": "src"
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "lib", "jest.*.ts"]
}
